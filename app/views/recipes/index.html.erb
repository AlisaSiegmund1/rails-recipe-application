<div class="container">
  <h5 style="text-align: center; margin-top:20px">All Recipes [<%=Recipe.count%>]</h5>

  <div class="cards-container d-flex justify-content-between flex-wrap" style="padding: 0 15px">
    <% @recipes.each do |recipe| %>
    <div class="row">
      <div class="col-12-lg" style="padding: 0 0">
        <div class="card">
        <%= cl_image_tag recipe.photo, height: 340, width: 270, crop: :fill, class: 'card-img-top' %>
        <div class="card-body">
          <!-- <a href="#" class="stretched-link">Go somewhere</a> -->
          <h5 class="card-text"><%= link_to recipe.name, recipe_path(recipe)%></h5>
        </div>
      </div>
      </div>
    </div>
  <% end %>
  </div>
</div>

